{
  "manifest_version": 2,
  "name": "Click Click Repeat",
  "description": "This extension records your keyboard input and mouse clicks and allows you to replay them.",
  "version": "1.0",
  "permissions": ["storage", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon_off.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"]
    }
  ]
}
